
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Zoomconferencia</title>
    <link href="~/Estilos/modalzoom.css" rel="stylesheet" type="text/css">
    <script>
        function myFunction1() {
            
            var x = document.getElementById("demo").value;
            document.getElementById("myImg").src = "https://zoom.us/wc/" + x + "/join?prefer=1&un=Users";            
            
        }
    </script>
   
</head>
<body>
    
    @{
        if (Convert.ToInt32(ViewBag.mensaje) < 4 || Convert.ToInt32(ViewBag.mensaje) > 6)
        {
            
            <div>
                <iframe src="https://zoom.us/signin" target="_blank" style="width: 100%; top: 0%; position :fixed;  height: 100%;"></iframe>
            </div>
        }
        else
        {
            @Scripts.Render("~/Scripts/CrearPregunta.js")

            <div class="modal fade" id="mostrarmodal2" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
                <div class="modal-dialog" style="position: initial;">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h3 style="position: absolute;">Verificacion de proceso</h3>
                        </div>
                        <div class="modal-body">
                            <h4>ingrese <input type="text" id="demo" class="form-control" /></h4>
                        </div>
                        <div class="modal-footer">
                            
                            <button class="btn" onclick="myFunction1()">Acceder a Pizarra</button>
                            <br /> </div>
                    </div>
                </div>
            </div>

                <div>
                    <iframe id="myImg" style="border:none; height: 600px; width: 100%;" sandbox="allow-forms allow-scripts allow-same-origin" allow="microphone; camera"></iframe>
                </div>

        }
    } 
        
</body>
</html>
